# Example terraform.tfvars file
# Copy this to terraform.tfvars and update with your values

ami                = "ami-0c55b159cbfafe1f0"  # Update with valid AMI for your region
instance_type      = "t2.micro"
subnet_id          = "subnet-xxxxxxxxx"        # Update with your subnet ID
security_group_ids = ["sg-xxxxxxxxx"]          # Update with your security group ID
instance_name      = "test-web-server"
environment        = "dev"
aws_region         = "us-east-1"

# Optional: SSH key for instance access
# key_name = "my-key-pair"

